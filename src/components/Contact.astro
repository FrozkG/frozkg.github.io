---
import Send from "./icons/Send.astro";
import InputContainer from "./InputContainer.astro";
import ContactIcon from "./icons/Contact.astro";
import ContactInfo from "./ContactInfo.astro";
---

<div class="grid grid-cols-1 gap-16 lg:grid-cols-2">
  <div class="flex flex-col gap-8 item-center md:items-Start pb-5">
    <div class="flex items-center justify-center lg:justify-normal">
      <span><ContactIcon class="size-8" /></span>
      <h2 class="text-3xl font-semibold pl-2">Contacto</h2>
    </div>
    <form id="contactForm" class="w-full max-w-lg mx-auto space-y-4">
      <InputContainer input="name" />
      <InputContainer input="mail" />
      <InputContainer input="asunt" />
      <div class="flex flex-col">
        <textarea
          name="message"
          placeholder="Mensaje"
          rows="4"
          class="resize-none p-3 mb-2 rounded-xl font-semibold border bg-[#151515] border-secundary-dark focus:outline-none focus:ring-2 focus:ring-secundary-dark focus:border-transparent placeholder:text-secundary-dark"
          required></textarea>
      </div>
      <button
        type="submit"
        class="w-full flex relative text-lg justify-center items-center md:py-1 lg:py-1 pl-1 gap-1 rounded-lg border-2 bg-[#141515] border-gray-500 bg-gray-800/5 hover:border-principal-green hover:text-principal-dark hover:font-semibold hover:-translate-y-1 btn-start overflow-hidden transition-all duration-300 ease-in-out"
      >
        Enviar
        <Send class="size-7" />
      </button>
    </form>
  </div>
  <div>
    <ContactInfo />
  </div>
</div>

<style>
  .btn-start::after {
    content: "";
    width: 1px;
    height: 1px;
    background: none;
    position: absolute;
    z-index: -1;
    top: 50%;
    left: 60%;
    transition: 0.3s ease-in-out all;
    border-radius: 100px;
  }

  .btn-start:hover::after {
    transform: scale(800);
    background: var(--principal-green);
  }
</style>
