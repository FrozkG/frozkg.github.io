---
import ProjectCode from "../components/icons/ProjectCode.astro";
import CardContainer from "./CardContainer.astro";
import CardContent from "./CardContent.astro";
---

<div class="flex flex-col">
  <div class="flex items-center justify-center md:justify-normal">
    <span>
      <ProjectCode class="size-8" />
    </span>
    <h2 class="text-3xl font-semibold pl-2">Proyectos</h2>
  </div>
  <div class="grid gap-16 p-8 grid-cols-1 lg:grid-cols-2 justify-items-center">
    <div class="flex flex-col gap-16">
      <CardContainer>
        <CardContent number={"P1"} />
      </CardContainer>
      <CardContainer>
        <CardContent number={"P3"} />
      </CardContainer>
      <CardContainer>
        <CardContent number={"P2"} />
      </CardContainer>
    </div>
    <div class="flex flex-col gap-16 lg:mt-40">
      <CardContainer>
        <CardContent number={"P2"} />
      </CardContainer>
      <CardContainer>
        <CardContent number={"P2"} />
      </CardContainer>
    </div>
  </div>
</div>

<style>
  @keyframes appear {
    from {
      opacity: 0;
      scale: 0.5;
    }
    to {
      opacity: 1;
      scale: 1;
    }
  }
</style>
